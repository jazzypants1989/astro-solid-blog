---
import Layout from "../layouts/Layout.astro"
let others = ["Home", "About", "Contact", "Portfolio"]
const response = await fetch("http://localhost:1337/api/posts/author/8")
const posts = await response.json()
---

<Layout title="My words are important." now="Blog" others={others}>
  <main class="min-h-screen">
    <h1
      class="text-4xl pt-4 font-bold text-center text-purple-900 animate-fade-in-down"
    >
      Listen to my words, you <span class="text-blue-500 animate-pulse"
        >heathens!</span
      >
    </h1>
    <div>
      {
        posts.map((post) => {
          return (
            <div class="flex flex-col items-center">
              <h2 class="text-2xl font-bold text-purple-900 animate-fade-in-down">
                {post.title}
              </h2>
              <p class="text-purple-900 animate-fade-in-down">{post.content}</p>
              <p>{post.author.name}</p>
            </div>
          )
        })
      }
    </div>
  </main>
</Layout>
