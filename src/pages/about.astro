---
import Layout from "../layouts/Layout.astro"
import { Image } from "@astrojs/image/components"
import { adjectives, randomAdjective } from "../components/Adjective.astro"
let others = ["Home", "Blog", "Contact", "Portfolio"]
---

<Layout
  title="All about the man, the myth, the legend"
  now="About"
  others={others}
