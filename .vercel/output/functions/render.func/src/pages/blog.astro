---
import Layout from "../layouts/Layout.astro"
import prisma from "../utils/db"
let others = ["Home", "About", "Contact", "Portfolio"]

const fetchData = async () => {
  const posts = await prisma.post.findMany()
  return posts
}

const posts = await fetchData()
---

<Layout title="My words are important." now="Blog" others={others}>
  <main class="min-h-screen">
    <h1
      class="text-4xl p-4 font-bold text-center text-purple-900 animate-fade-in-down dark:text-white"
    >
      Listen to my words, you <span class="text-blue-500 animate-pulse"
        >heathens!</span
      >
    </h1>
    <div class="flex flex-col items-center justify-center gap-4">
      <h2
        class="text-2xl font-bold text-purple-900 animate-fade-in-down dark:text-white"
      >
        My Articles
      </h2>
      <ul>
        {
          posts.map((post) => (
            <li class="text-purple-900 animate-fade-in-down dark:text-white list-disc">
              <a href={`/blog/${post.permalink}`}>{post.title}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
